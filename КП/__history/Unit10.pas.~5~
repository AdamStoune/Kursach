unit Unit10;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls,
  Vcl.Imaging.jpeg;

type
  TForm10 = class(TForm)
    ImagePicture: TImage;
    MemoText: TMemo;
    ButtonNext: TButton;
    ButtonRestart: TButton;
    Image1: TImage;
    procedure FormCreate(Sender: TObject);
    procedure ButtonNextClick(Sender: TObject);
    procedure ButtonRestartClick(Sender: TObject);
    procedure Image1Click(Sender: TObject);
  private
    FTextList: TStringList;
    FCurrentIndex: Integer;
  public
    procedure LoadTextFile(const FileName: string);
    procedure ShowTextAndPicture(Index: Integer);
    procedure ResetToBeginning;
  end;

var
  Form10: TForm10;

implementation

{$R *.dfm}

uses Unit2, Unit13, Unit12, Unit11;

procedure TForm10.FormCreate(Sender: TObject);
begin
  FTextList := TStringList.Create;
  FCurrentIndex := 0;
  LoadTextFile(ExtractFilePath(ParamStr(0)) +'predpis.txt');
  ShowTextAndPicture(FCurrentIndex);
end;

procedure TForm10.Image1Click(Sender: TObject);
begin
Form10.Hide;
Form11.Show;
end;

procedure TForm10.LoadTextFile(const FileName: string);
begin
  FTextList.LoadFromFile(FileName);
  FTextList.Text := UTF8ToString(FTextList.Text); // Преобразование текста в UTF-8 в строку Delphi
end;

procedure TForm10.ShowTextAndPicture(Index: Integer);
var
  TextLine, ImagePath: string;
begin
  if (Index >= 0) and (Index < FTextList.Count) then
  begin
    TextLine := FTextList[Index];
    ImagePath := ExtractFilePath(ParamStr(0)) + Trim(Copy(TextLine, Pos('|', TextLine) + 1, Length(TextLine)));
    TextLine := Trim(Copy(TextLine, 1, Pos('|', TextLine) - 1));

    MemoText.Lines.Text := TextLine;
    ImagePicture.Picture.LoadFromFile(ImagePath);
  end
  else
  begin
    MemoText.Clear;
    ImagePicture.Picture := nil;
  end;
end;

procedure TForm10.ButtonNextClick(Sender: TObject);
begin
  Inc(FCurrentIndex);
  if FCurrentIndex >= FTextList.Count then
    FCurrentIndex := 0;
  ShowTextAndPicture(FCurrentIndex);
end;

procedure TForm10.ButtonRestartClick(Sender: TObject);
begin
Form10.Hide;
Form2.Show;
  ResetToBeginning;
end;

procedure TForm10.ResetToBeginning;
begin
  FCurrentIndex := 0;
  ShowTextAndPicture(FCurrentIndex);
end;

end.
